@model List<Mooshak2._0.Models.ViewModels.AssignmentProjectViewModel>

@{
    ViewBag.Title = "view";
}

<h2>List of all projects</h2>
<div style="overflow-y:scroll; height: 300px;">
    <table class="table table-bordered">

        <thead>
        <tr>
            <th>Course</th>
            <th>Assignment</th>
            <th>Project</th>
            <th>Weight</th>
            <th>Deadline</th>
            <th> </th>
        </tr>
        </thead>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.CourseName</td>
                <td>@project.AssignmentName</td>
                <td>@project.ProjectName</td>
                <td>@project.Weight</td>
                <td>@project.Deadline</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = project.ID}) |
                    @Html.ActionLink("Details", "Details", new {id = project.ID}) |
                    @Html.ActionLink("Delete", "Delete", new {id = project.ID},
                        new {onclick = "return confirm('Are you sure you want to delete this project?')"})
                </td>
            </tr>

        }

    </table>
</div>
<button onclick="location.href='@Url.Action("Create", "AssignmentProject")'" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus"></span> Create New
</button>
