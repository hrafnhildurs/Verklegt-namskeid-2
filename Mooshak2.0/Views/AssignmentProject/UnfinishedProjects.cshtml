@model List<Mooshak2._0.Models.ViewModels.AssignmentProjectViewModel>

    <h2>Unfinished Projects</h2>
   
<nav class="LeftNav">
    <button id="userBtn" class="btn btn-default" onclick="location.href = '@Url.Action("UnfinishedProjects", "AssignmentProject")'">Unfinished Assignments</button>
    <button id="userBtn" class="btn btn-default" onclick="location.href = '@Url.Action("ViewSubmissions", "Submission")'">View Submissions</button>
</nav>
<br/>
 <div>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Course</th>
                    <th>Assignment</th>
                    <th>Project</th>
                    <th>Weight</th>
                    <th>Deadline</th>
                    <th> </th>
                </tr>
            </thead>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.CourseName</td>
                    <td>@project.AssignmentName</td>
                    <td>@project.ProjectName</td>
                    <td>@project.Weight %</td>
                    <td>@project.Deadline</td>
                    <td>
                        @Html.ActionLink("Submit Solution", "Submit", "Submission", new { projectId = project.ID, assignmentId = project.AssignmentID }, new { @class = "btn btn-success" })
</tr>
            }
        </table>
    </div>
