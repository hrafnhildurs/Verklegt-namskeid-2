
@{
    ViewBag.Title = "Index";
}

<h2>Assignments</h2>
<br />
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Deadline</th>
            <th>Submittions</th>
            <th>Course</th>
        </tr>
    </thead>
    @foreach (var assignment in Model)
    {
        <tr>
            <td>@assignment.assignmentName</td>
            <td>@assignment.CourseID</td>
            <td>@assignment.Deadline</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = assignment.ID }) |
                @Html.ActionLink("Details", "Details", new { id = assignment.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = assignment.ID },
                new { onclick = "return confirm('Are you sure you want to delete this course?')" })
            </td>
        </tr>

    }

</table>
<button onclick="location.href='@Url.Action("Create", "Assignment")'" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus"></span> Create New
</button>