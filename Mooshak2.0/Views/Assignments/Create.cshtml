@model Mooshak2._0.Models.ViewModels.AssignmentViewModel

@using System.Web.Mvc.Html
@using Mooshak2._0.Models
@using Mooshak2._0.Models.Entities
@using Mooshak2._0.Models.ViewModels

@{
    ViewBag.Title = "CreateAssignment";
}

<h2>Create assignment</h2>


        <form action="/Assignments/Create" method="post">
            <div>
                <label for="">Course</label>
                <select id="courseId" name="courseId" class="form-control">
                    @foreach (var course in Model.AvailableCourses)
                    {
                        <option value="@course.CourseID">@course.CourseName</option>
                    }
                </select>
            </div>

            <div class="form-group">

                <label for="">Deadline</label>
                @Html.TextBoxFor(m => Model.Deadline, new { @class = "form-control" })

                <label for="">Assignment Name</label>
                @Html.TextBoxFor(m => Model.AssignmentName, new { @class = "form-control" })
                <!--<input type="text" class="form-control">-->
            </div>
            <input type="submit" value="Save" class="btn btn-success">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary btn-large" })
        </form>

