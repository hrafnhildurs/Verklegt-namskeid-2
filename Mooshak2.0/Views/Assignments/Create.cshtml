@model Mooshak2._0.Models.ViewModels.AssignmentViewModel

@{
    ViewBag.Title = "CreateAssignment";
}

<h2>CreateAssignment</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="">Course</label>
        @Html.TextBoxFor(m => Model.CourseID, new { @class = "form-control" })

        <label for="">Deadline</label>
        @Html.TextBoxFor(m => Model.Deadline, new { @class = "form-control" })

        <label for="">Project Name</label>
        @Html.TextBoxFor(m => Model.Projects, new { @class = "form-control" })
        <!--<input type="text" class="form-control">-->
    </div>
    <input type="submit" value="Save" class="btn btn-success">
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary btn-large" })
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
