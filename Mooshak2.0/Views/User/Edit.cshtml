@model Mooshak2._0.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit user</h2>

@using (Html.BeginForm())
{
    <div class="form-group">

        <label for="m.FullName">Name</label>
        @Html.TextBoxFor(m => Model.FullName, new { @class = "form-control" })

        <label for="">SSN</label>
        @Html.TextBoxFor(m => Model.SSN, new { @class = "form-control" })

        <label for="">E-mail</label>
        @Html.TextBoxFor(m => Model.Email, new { @class = "form-control" })

        <label for="">Role</label>
        @Html.DropDownListFor(m => m.UserRole, (ViewBag.RoleList as List<SelectListItem>), new { @class = "form-control" })
        <!--<input type="text" class="form-control">-->
    </div>
    <input type="submit" value="Save" class="btn btn-success">

    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary btn-large" })

}